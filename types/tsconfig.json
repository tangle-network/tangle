{
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "emitDeclarationOnly": true,
    "paths": {
      "@polkadot/api/augment": ["src/interfaces/augment-api.ts"],
      "@polkadot/types/augment": ["src/interfaces/augment-types.ts"],
      "@polkadot/types/lookup": ["src/interfaces/types-lookup.ts"],
      "@webb-tools/tangle-substrate-types": ["./src/interfaces/index.ts"],
      "@webb-tools/tangle-substrate-types/*": ["./src/interfaces/*"]
    },
    "outDir": "build",
    "composite": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "ES5",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["scripts/**/*", "src/**/*", "playground.ts", "service-demo.ts"],
  "exclude": [
    "build/**/*",
    "**/build/**/*",
    "node_modules/**/*",
    "**/node_modules/**/*"
  ]
}
